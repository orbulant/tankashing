---
import Layout from '../layouts/Layout.astro';
import 'animate.css';
---

<Layout title="Home">
  <main>
    <h1 class="animate__animated animate__bounce animate__slow animate__infinite name">Tan Ka-Shing</h1>
    <div class="job">
      <p class="animate__animated animate__fadeInDown animate__delay-2s present">present day...</p>
      <p>
        Full Stack Developer
        <p class="animate__animated animate__fadeInDown animate__delay-2s present">
          SDK Development, Ruby on Rails, TypeScript, Golang, Node.js, Next.js, React.js
        </p>
      </p>
      <p class="animate__animated animate__hinge animate__slow animate__delay-1s">Frontend Developer</p>
      <p class="animate__animated animate__hinge animate__slow animate__delay-1s">Backend Developer</p>
      <p class="animate__animated animate__hinge animate__slow animate__delay-1s">Software Engineer</p>
      <p class="animate__animated animate__hinge animate__slow animate__delay-1s">Student</p>
    </div>
  </main>
</Layout>

<style>
  .present {
    font-weight: lighter;
    font-style: italic;
  }

  .name {
    font-weight: bold;
  }

  .card {
    display: flex;
    flex-direction: column;
  }

  .job {
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow: hidden;
    padding-right: 18px;
    padding-left: 18px;
    padding-bottom: 180px;
  }
</style>
